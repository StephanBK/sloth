# Sloth Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Database
DATABASE_URL=postgresql://username@localhost:5432/sloth

# Supabase (get these from your Supabase dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# App Settings
SECRET_KEY=generate-a-strong-random-key-at-least-32-chars
DEBUG=false
ENVIRONMENT=development

# Stripe (get these from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create products in Stripe Dashboard â†’ Products)
STRIPE_PRICE_MONTHLY=price_monthly_id_here
STRIPE_PRICE_YEARLY=price_yearly_id_here

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:5173
